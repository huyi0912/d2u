<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <typeAlias alias="Unit" type="org.d2u.base.shared.model.Unit"/>
        <typeAlias alias="UnitScope" type="org.d2u.base.shared.model.Unit$Scope"/>
    </typeAliases>

    <objectFactory type="org.d2u.base.server.data.CacheableObjectFactory">
    </objectFactory>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="org.postgresql.Driver"/>
                <property name="url" value="jdbc:postgresql://localhost:5432/test"/>
                <property name="username" value="postgres"/>
                <property name="password" value="postgres"/>
            </dataSource>
        </environment>

        <environment id="test">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="org.postgresql.Driver"/>
                <property name="url" value="jdbc:postgresql://localhost:5432/test"/>
                <property name="username" value="postgres"/>
                <property name="password" value="postgres"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="org/d2u/base/server/data/EmployeeMapper.xml"/>
        <mapper resource="org/d2u/base/server/data/DepartmentMapper.xml"/>
        <mapper resource="org/d2u/base/server/data/UnitMapper.xml"/>
    </mappers>

</configuration>