<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
    不同Mapper文件的namespace值应该保证唯一
    在程序中通过[ namespace + id ]定位到要执行哪一条SQL语句
 -->

<mapper namespace="org.d2u.base.shared.data.DepartmentMapper">
    <!--select id="getEmployees" resultType="org.d2u.base.shared.model.Employee">
        select * from employee where department_name = #{department_name}
    </select-->
    <select id="getEmployees" resultMap="org.d2u.base.shared.data.EmployeeMapper.EmployeeResultMap">
        select * from employee where department_name = #{id}
    </select>

    <resultMap id="DepartmentSimpleResultMap" type="org.d2u.base.shared.model.Department">
        <id property="name" column="name"/>
        <!--association property="lead" resultMap="EmployeeResultMap" columnPrefix="lead_"/-->
    </resultMap>

    <resultMap id="DepartmentResultMap" type="org.d2u.base.shared.model.Department">
        <id property="name" column="name"/>
        <!--association property="lead" resultMap="EmployeeResultMap" columnPrefix="lead_"/-->
    </resultMap>
</mapper>